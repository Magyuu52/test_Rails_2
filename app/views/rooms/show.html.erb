<div class="body-container">
    <h2 class="head-topic">施設情報</h2>
    <div class="d-flex ">
        <% if @room.image_room.attached? %>
            <%= image_tag(rails_blob_path(@room.image_room),:size => "500x300") %>
        <% else %>
            <%= image_tag("default_room.png", :size => "500x300") %>
        <% end %>
        <div class="bg-light align-self-baseline px-3 py-3">
            <div class="d-flex justify-content-between">
                <p class="room-name"><%= @room.name %></p>
                <p class="room-price">¥<%= @room.price %></p>
            </div>
            <%= @room.detail %>
            <%= form_with model: @reservation, url: reservations_create_path do |f| %> 
                <%= f.label :check_in ,"チェックイン" %>
                <%= f.date_select :check_in %>
                <%= f.label :check_out ,"チェックアウト" %>
                <%= f.date_select :check_out %>
                <%= f.label :population ,"タイトル" %>
                <%= f.text_field :population %>
                    <%= f.submit "予約する", class:"btn btn-outline-primary w-100 py-3 mt-3 fw-bolder"%>
            <% end %>
        </div>
    </div>
</div>