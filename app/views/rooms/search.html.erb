<div class="body-container">
    <div class="d-flex justify-content-between align-items-center">
    <h2 class="head-topic">検索結果</h2>
    <p class="fs-2 fw-bolder"><%= @rooms_count %>件が見つかりました</p>
    </div>
    <div class="row ">
        <% @rooms.each do |room| %>
            <div class="col-sm-4 mt-4">
                <div class="bg-light rounded h-100">
                    <% if room.image_room.attached? %>
                        <%= image_tag(rails_blob_path(room.image_room), class:"img-fluid rounded") %>
                    <% else %>
                        <%= image_tag("default_room.png", class:"img-fluid rounded") %>
                    <% end %>
                    <div class="px-3">
                        <div class="room-name mt-2"><%= room.name %></div>
                        <div class="room-adress"><%= room.adress %></div>
                        <p class="room-detail"><%= room.detail %></p>
                        <p class="room-price">¥<%= room.price %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
