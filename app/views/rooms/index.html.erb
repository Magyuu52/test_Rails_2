<div class="body-container mb-5">
    <h2 class="head-topic">登録施設一覧</h2>
    <table class="table align-middle">
        <thead>
            <tr>
                <th style="width: 15%">画像</th>
                <th style="width: 20%">施設名</th>
                <th style="width: 40%">紹介文</th>
                <th style="width: 10%">料金</th>
                <th style="width: 10%">作成日</th>
                <th style="width: 5%"></th>
            </tr>
        </thead>
        <tbody>
        <% @rooms.each do |room| %>
            <tr>
                <td>
                    <% if room.image_room.attached? %>
                        <%= image_tag(rails_blob_path(room.image_room),class:"img-cover-s") %>
                    <% else %>
                        <%= image_tag("default_room.png",class:"img-cover-s") %>
                    <% end %>
                </td>
                <td><%= link_to "#{room.name}", room,class:'link-offset-2 text-decoration-none'%></td>
                <td><%= room.detail %></td>
                <td>¥<%= room.price %></td>
                <td><%= l room.created_at,format: :short %></td>
                <td>
                    <div class="dropdown"> 
                        <button id="btnOpenMenu" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            設定
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnOpenMenu">
                            <%= link_to "編集", [:edit, room], class:"dropdown-item", data: { turbolinks: :false }  %>
                            <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "dropdown-item text-danger", data: { turbolinks: :false }  %>
                        </div>
                    </div>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>