<div class="form-container">
    <h2 class="head-topic">新規登録</h2>

    <div class="error-messages">
        <%= render "shared/error",obj: @user%>
    </div>

    <%= form_with model: @user, url: users_create_path do |f| %> 
        <div class="mb-3">
            <%= f.label :name ,"ユーザー名" ,class:"mb-3" %><span class="required-item">*</span>
            <%= f.text_field :name, class:"form-control", placeholder:"ユーザー名を入力" %>
        </div>
        <div class="mb-3">
            <%= f.label :email ,"メールアドレス" ,class:"mb-3" %><span class="required-item">*</span>
            <%= f.text_field :email, class:"form-control", placeholder:"メールアドレスを入力（name@example.com）" %>
        </div>
        <div class="mb-3">
            <%= f.label :password ,"パスワード" ,class:"mb-3" %><span class="required-item">*</span>
            <%= f.password_field :password, class:"form-control", placeholder:"パスワードを入力" %>
        </div>
        <div class="mb-4">
            <%= f.label :password_confim ,"確認用パスワード" ,class:"mb-3" %><span class="required-item">*</span>
            <%= f.password_field :password_confim, class:"form-control", placeholder:"確認用パスワードを入力" %>
        </div>
            <%= f.submit "新規ユーザーを作成する", class:"btn btn-outline-primary w-100 py-3 mt-3 fw-bolder"%>
    <% end %>
</div>