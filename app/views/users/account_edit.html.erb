<div class="form-container">
    <h2 class="head-topic">アカウント編集</h2>

    <div class="error-messages">
        <%= render "shared/error",obj: @current_user %>
    </div>

    <%= form_with model: @user, url: users_account_update_path do |f| %>
        <div class="mb-3">
            <%= f.label :email ,"メールアドレス" ,class:"mb-2" %>
            <%= f.text_field :email, class:"form-control",value:"#{@current_user.email}", placeholder:"ユーザー名を入力" %>
        </div>
        <div class="mb-3">
            <%= f.label :password ,"パスワード" ,class:"mb-2" %>
            <%= f.password_field :password, class:"form-control",value:"#{@current_user.password}", placeholder:"パスワードを入力"%>
        </div>
        <div class="mb-4">
            <%= f.label :password_confim ,"確認用パスワード" ,class:"mb-2" %>
            <%= f.password_field :password_confim, class:"form-control",value:"#{@current_user.password_confim}", placeholder:"確認用パスワードを入力" %>
        </div>
        <div class="d-flex justify-content-end">
            <%= f.submit  "保存", class:"btn btn-outline-primary w-25 py-2 mt-3 me-3 fw-bolder"%>
            <%= link_to "キャンセル", :users_account , class:"btn btn-dark w-25 py-2 mt-3 fw-bolder" %>
        </div>
        
    <% end %>
</div>