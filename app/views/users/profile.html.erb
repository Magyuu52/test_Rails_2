<div class="account-container">
    <h2 class="head-topic">設定</h2>
    <div class="account-wrapper">
        <div class="d-flex">
            <div class="col-lg-3 d-grid align-self-baseline align-items-center flex-fill account-btn mb-3">
                <%= link_to "アカウント", :users_account,class:"btn btn-outline-success py-3 px-5 mb-3" %>
                <%= link_to "プロフィール", :users_profile,class:"btn btn-outline-success py-3 px-5 mb-3" %>
            </div>
            <div class="col-lg-8 ms-5 flex-fill w-75">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3 class="account-header">プロフィール</h3>
                    <%= link_to "編集", :users_profile_edit, class: "btn btn-outline-success py-2 px-4"%>
                </div>
                <div class="border-bottom border-dark"></div>
                <div class="d-flex mt-4 align-items-center">
                    <p class="w-25">アイコン画像</p>
                    <% if @current_user.image_name.attached? %>
                        <%= image_tag(rails_blob_path(@current_user.image_name),:size => "70x70",class:"rounded-circle") %>
                    <% else %>
                        <%= image_tag("default_user.png", :size => "70x70") %>
                    <% end %>
                </div>
                <div class="d-flex mt-4">
                    <p class="w-25">名前</p>
                    <p class="w-25"><%= @current_user.name %></p>
                </div>
                <div class="d-flex mt-4">
                    <p class="w-25">自己紹介</p>
                    <p class="w-25"><%= @current_user.introduction %></p>
                </div>
            </div>
        </div>
    </div>
</div>

