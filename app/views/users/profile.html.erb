<div class="account-container">
    <h2 class="head-topic">アカウント設定</h2>
    <div class="account-wrapper">
        <div class="d-flex">
            <div class="col-lg-3 d-grid  align-items-center flex-fill w-25">
                <%= link_to "アカウント", :users_account,class:"btn btn-outline-success py-2 px-5" %>
                <%= link_to "プロフィール", :users_profile,class:"btn btn-outline-success py-2 px-5" %>
                <%= link_to "編集", :users_account_edit, class: "btn btn-outline-success py-2 px-5"%>
            </div>
            <div class="col-lg-8 ms-5 flex-fill w-75">
                <h3 class="account-header border-bottom border-dark border-2">アカウント</h3>
                <div class="d-flex mt-4 align-items-center">
                    <p class="w-25">アイコン画像</p>
                    <% if @current_user.image_name.attached? %>
                        <%= image_tag(rails_blob_path(@user.image),:size => "50x50") %>
                    <% else %>
                        <%= image_tag("default_user.png", :size => "50x50") %>
                    <% end %>
                </div>
                <div class="d-flex mt-4">
                    <p class="w-25">名前</p>
                    <p class="w-25"><%= @current_user.name %></p>
                </div>
                <div class="d-flex mt-4">
                    <p class="w-25">パスワード</p>
                    <p class="w-25"><%= @current_user.password %></p>
                </div>
            </div>
        </div>
    </div>
</div>

