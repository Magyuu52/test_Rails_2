<div class="account-container">
    <h2 class="head-topic">設定</h2>
    <div class="account-wrapper">
        <div class="d-flex">
            <div class="col-lg-3 d-grid align-self-baseline align-items-center flex-fill mb-3 account-btn">
                <%= link_to "アカウント", :users_account,class:"btn btn-outline-success py-3 px-5 mb-3" %>
                <%= link_to "プロフィール", :users_profile,class:"btn btn-outline-success py-3 px-5 mb-3" %>
            </div>
            <div class="col-lg-8 ms-5 flex-fill w-75 mb-5">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3 class="account-header">アカウント</h3>
                    <%= link_to "編集", :users_account_edit, class: "btn btn-outline-success py-2 px-4"%>
                </div>
                <div class="border-bottom border-dark"></div>
                <div class="d-flex mt-4">
                    <p class="w-25">メールアドレス</p>
                    <p class="w-50"><%= @current_user.email %></p>
                </div>
                <div class="d-flex mt-4">
                    <p class="w-25">パスワード</p>
                    <p class="w-25" >*********</p>
                </div>
            </div>
        </div>
    </div>
</div>
